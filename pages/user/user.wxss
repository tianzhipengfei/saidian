/* pages/user/user.wxss */
page{
    background: #F5F5F5;
}

.avatar_wrapper{
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    display: flex;
    height: 290rpx;
    width: 750rpx; 
    background-image: linear-gradient(300deg, #a1c4fd 0%, #c2e9fb 100%);
}

.avatar{
    margin-left: 50rpx;
    margin-top: 50rpx;
    height: 200rpx;
    width: 200rpx;
    border-radius: 100rpx;
}

.user_text{
    margin-left: 50rpx;
    margin-top: 60rpx;
    display: flex;
    flex-direction: column;
}

.username{
    font-size: 45rpx;
}

.user_location{
    margin-top: 20rpx;
    font-size: 35rpx;
}

.buttonGroup{
    height: 100%;
    width: 100%;
    background: black;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    margin-top:20rpx;
}

.myButton{
    background: white;
    width: 100%;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    display: flex;
    border-bottom: 1rpx rgba(0, 0, 0, 0.1) solid;
}

.buttonIcon{
    width: 50rpx;
    height: 50rpx;
    margin-top: 15rpx;
    margin-left: 20rpx;
}

.buttonText{
    line-height: 80rpx;
    font-size: 30rpx;
    margin-left: 20rpx;
}