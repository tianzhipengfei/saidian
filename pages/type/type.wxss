/* pages/type/type.wxss */

page{
    background: #F5F5F5;
}

.top_navi{
    background-image: linear-gradient(-225deg, #5D9FFF 0%, #B8DCFF 48%, #6BBBFF 100%);
    position: fixed;
    opacity: 1;
}

.type_selector{
    height: 80rpx;
    width: 750rpx;
    display: flex;
    justify-content: center;
    background: white;
}

.type_choice{
    height: 60rpx;
    margin-top: 10rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    width: 335rpx;
    text-align: center;
    font-size: 40rpx;
    line-height: 60rpx;
    color: #707070;
}

.type_choice_selected{
    height: 60rpx;
    margin-top: 10rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
    width: 335rpx;
    text-align: center;
    font-size: 40rpx;
    line-height: 60rpx;
    color: #186AAE;
    border-bottom: 1rpx #186AAE solid;
}

.sports_type_scroll{
    background: #F5F5F5;
    opacity: 0.8;
    position: fixed;
    top:80rpx;
    width: 150rpx;
    height: 100%;
    z-index:101;
}


.sport_type_text{
    font-size: 32rpx;
    height: 80rpx;
    line-height: 80rpx;
    color: #707070;
    width: 150rpx;
    flex-shrink: 0;
    text-align: center;
}

.sport_type_text_selected{
    font-size: 32rpx;
    height: 80rpx;
    line-height: 80rpx;
    width: 150rpx;
    flex-shrink: 0;
    text-align: center;
    color: black;
    border-left: 2rpx #1F6BAC solid;
    /* box-shadow: 2px 2px 1px #888888; */
}

.normal_adver{
    background: #F5F5F5;
    top: 80rpx;
    position: relative;
    display: flex;
    width: 600rpx;
    left: 150rpx;
    height: 100%;
    flex-direction: row;
    align-items: center;
    border-bottom: 5rpx rgba(0,0,0,0.1) solid;
    border-left: 5rpx rgba(0,0,0,0.1) solid; 
    z-index: -1;
}

.normal_adver_image{
    width: 150rpx;
    height: 150rpx;
    margin: 10rpx;
}

.normal_adver_des{
    width: 410rpx;
    margin: 10rpx;
    display: flex;
    flex-direction: column;

}

.normal_adver_name{
    font-size: 30rpx;
    line-height: 42rpx;
}

.normal_adver_price{
    font-size: 24rpx;
    line-height: 40rpx;
    height: 40rpx;
}

.starContainer{
    height: 50rpx;
    padding-bottom: 20rpx;
}

.star{
    width: 30rpx;
    height: 30rpx;
}